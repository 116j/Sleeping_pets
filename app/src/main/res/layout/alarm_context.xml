<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmActivity">

    <include
        layout="@layout/menu_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="121dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="222dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/oval"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/alarmcoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"
            android:letterSpacing="0.1"
            android:text="500"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:src="@mipmap/coin"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/musicButton"
        android:layout_width="32dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="366dp"
        android:layout_marginTop="18dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/music" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gotobedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_thin"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/raleway_light"
                android:text="go to bed"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wakeupTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_thin"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/raleway_light"
                android:gravity="end"
                android:text="wake up"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:layout_marginTop="215dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="293dp"
            android:layout_height="match_parent"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_light"
                android:textSize="30sp"
                app:layout_anchor="@+id/materialProgressBar"
                app:layout_anchorGravity="center"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="61dp" />

            <ProgressBar
                android:id="@+id/sleepTimer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/progress_bar_drawable"
                android:indeterminateTint="@color/white"
                android:progress="100"
                android:progressDrawable="@drawable/progress_bar_drawable"
                android:visibility="visible" />

            <View
                android:layout_width="183dp"
                android:layout_height="183dp"
                android:background="@drawable/circle"
                app:layout_anchor="@+id/timerText"
                app:layout_anchorGravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="54dp"
       android:layout_marginTop="490dp"
       android:gravity="center"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">
       <Button
           android:id="@+id/sleepButton"
           android:layout_width="254dp"
           android:layout_height="match_parent"
           android:background="@drawable/sleep_button"
           android:fontFamily="@font/raleway_light"
           android:gravity="center_horizontal"
           android:letterSpacing="0.1"
           android:text="sleep"
           android:textAllCaps="false"
           android:textSize="30sp" />
   </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>