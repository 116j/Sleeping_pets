<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_medium"
            android:letterSpacing="0.15"
            android:text="New password"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/restorePsw"
            android:layout_marginTop="63dp"
            android:layout_width="298dp"
            android:layout_height="32dp"
            android:background="@drawable/login_edit_text"
            android:hint="password"
            android:textSize="13sp"
            android:gravity="center"
            android:fontFamily="@font/roboto_light"/>
        <TextView
            android:id="@+id/restorePswError"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#D11D1D"
            android:textSize="12sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/repeatRestorePsw"
            android:layout_marginTop="8dp"
            android:layout_width="298dp"
            android:layout_height="32dp"
            android:background="@drawable/login_edit_text"
            android:hint="repeat password"
            android:textSize="13sp"
            android:gravity="center"
            android:fontFamily="@font/roboto_light"/>
        <TextView
            android:id="@+id/repeatRestorePswError"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#D11D1D"
            android:textSize="12sp"
            android:gravity="center"/>
        <Button
            android:id="@+id/restorePswButton"
            android:layout_marginTop="15dp"
            android:layout_width="298dp"
            android:layout_height="32dp"
            android:background="@drawable/void_sign_up_button"
            android:textSize="13sp"
            android:gravity="center"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_thin"
            android:text="Send"/>
    </LinearLayout>

</LinearLayout>