<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="328dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/signUpEmail"
                android:layout_width="298dp"
                android:layout_height="32dp"
                android:background="@drawable/login_edit_text"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:hint="email"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/signUpEmailError"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#D11D1D"
                android:textSize="12sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/signUpPsw"
                android:layout_width="298dp"
                android:layout_height="32dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/login_edit_text"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:inputType="textPassword"
                android:hint="password"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/signUpPswError"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#D11D1D"
                android:textSize="12sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/signUpRepeatPsw"
                android:layout_width="298dp"
                android:layout_height="32dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/login_edit_text"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:inputType="textPassword"
                android:hint="repeat password"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/signUpRepeatPswError"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#D11D1D"
                android:textSize="12sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/signUpButtonN"
                android:layout_width="298dp"
                android:layout_height="32dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/void_sign_up_button"
                android:fontFamily="@font/roboto_thin"
                android:gravity="center"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="200dp"
                    android:layout_height="1.2dp"
                    android:alpha="0.47"
                    android:background="@drawable/horizontal_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:alpha="0.47"
                    android:fontFamily="@font/roboto_regular"
                    android:text="OR"
                    android:textSize="14dp"/>

                <View
                    android:layout_width="200dp"
                    android:layout_height="1.2dp"
                    android:alpha="0.47"
                    android:background="@drawable/horizontal_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="36dp"
                android:id="@+id/FBSignUp"
                android:layout_width="165dp"
                android:alpha="0.47"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/facebook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Sign Up With Facebook"
                    android:textColor="#2A8BBE"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/VKSignUp"
                android:layout_width="165dp"
                android:alpha="0.47"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/vk" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Sign Up With VK"
                    android:textColor="#2A8BBE"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>